
@model Vidly.ViewModels.NewMovieViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Movie</h2>
<style>
    .MakeDark {
        color: black;
    }
</style>

@using (Html.BeginForm("Save", "Movies")) 
{
    @Html.ValidationSummary(true, "Please fix the following errors");
    @Html.HiddenFor(m => m.Movie.Id)
    @Html.HiddenFor(m => m.Movie.DateAdded)
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        <br />
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Genre)
        <br />
        @Html.DropDownListFor(m => m.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select the Genre", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.Genre)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.ReleaseDate)
        <br />
        @Html.TextBoxFor(m => m.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Movie.ReleaseDate)
    </div>
    <div class="checkbox">
        <label>
            @Html.TextBoxFor(m => m.Movie.NumberInStock) Subscribe to Newsletter?
        </label>
    </div>
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>

}

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}